{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "pipenv run python .\\backend\\manage.py runserver",
            "label": "Backend",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "type": "shell",
            "command": "npm start",
            "label": "Frontend",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}\\menzarfrontend"
            },
        },
        {
            "type": "shell",
            "command": "pipenv install",
            "label": "Build backend",
            "options": {
                "cwd": "${workspaceFolder}\\backend"
            },
        },
        {
            "type": "shell",
            "command": "npm install",
            "label": "Build frontend",
            "options": {
                "cwd": "${workspaceFolder}\\menzarfrontend"
            },
        },
    ]
}